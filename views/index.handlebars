  <div class="row justify-content-center">
    
    <div class="col-5 mainCol wantCol">
      <h2>I want to Eat ... </h2>
      <hr>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-5 mainCol devouredCol">
     <h2>Devouring!!!!</h2>
      <hr>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/if}}
        {{/each}}
      </ul>
