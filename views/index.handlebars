           <form class="create-form">

            <div class="form-group">
              <label for="ca">Burger Name:</label>
              <input type="text" id="ca" name="burger_name">
            </div>

            <div class="form-group">
              <label for="devoured">Devoured?</label><br>
              <input type="radio" name="devoured" value="1" checked> Devoured!<br>
              <input type="radio" name="devoured" value="0"> I want to Eat
            </div>
      

            <button type="submit" class="btn btn-outline-warning">Add burger</button>
          </form>
